        function show()
        {
			$.ajax({
		        type: "POST",
		        url: 'http://crm.com/User/JS/getNewTaskUser',
		        data: "ajax=1",
		        success: function(msg)
		        {
		        	if(msg.substr(0,3) == "OK|")
