		        		{
		        			if(a[1] == 0)
		        				$("#aNewUser").removeAttr('href');
		        			if(a[2] == 0){
		        				$("#aNewTask").removeAttr('href');}
	        				$('#cabinet').addClass('statusnew');
	        				$('#newUser').html('Новые пользователи ('+a[1]+')');
	        				$('#cabinet').addClass('statusnew');
	        				$('#newTask').html('Новые заказы ('+a[2]+')');
	        			}
	        			else
	        			{

	        				$('#cabinet').removeClass('statusnew');
	        			}
		        	}
		        	else alert(msg)
		        },
		        error: function()
		        {
		        }

		    });
		}
